<div class="tournament-banner">
  <h2>{{title}}</h2>

  <table>
    <tr>
      <td>
        <h3>Game:</h3>
      </td>
      <td>
        <h3>{{game}}</h3>
      </td>
    </tr>

    <tr>
      <td>
        <h3>Mode:</h3>
      </td>
      <td>
        {{#if isTeamMode}}
          <h3>Team</h3>
        {{else}}
          <h3>Individual</h3>
        {{/if}}
      </td>
    </tr>

    <tr>
      <td>
        <h3>Starts in:</h3>
      </td>
      <td>
        <h3>{{starts_at}}</h3>
      </td>
    </tr>

    <tr>
      <td>
        <h3>Owner:</h3>
      </td>
      <td>
        {{!-- <h3>{{#link-to 'user' owner}} {{ownerFormatted}} {{/link-to}}</h3> --}} <h3>Owner name placeholder</h3>
      </td>
    </tr>

    <tr>
      <td>
        <h3>Description:</h3>
      </td>
      <td>
        <h3>{{description}}</h3>
      </td>
    </tr>
  </table>

  {{#if displayIndividualSignup}}
    <button class="medium-btn" {{action 'individualSignup'}}>Enter Tournament</button>
  {{/if}}

  {{storeTest}}

  {{!-- {{mode}} --}}

{{!--   {{#if displayTeamSignup}}
