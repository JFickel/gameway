<h2>Tournaments List: </h2>

{{#link-to 'tournaments.new' class="btn btn-primary btn-info"}}Create Tournament{{/link-to}}

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  {{#each tournament in controller}}
    <tr>
      <td>{{tournament.id}}</td>
      <td>{{#link-to 'tournament' tournament}}{{tournament.name}}{{/link-to}}</td>
      <td>{{tournament.description}}</td>
    </tr>
  {{/each}}
</table>
