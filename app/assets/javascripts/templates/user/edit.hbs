<h2>Account Settings</h2>

<div class="row">
  <div class="col-sm-3 col-md-2">
    <div class="thumbnail">
      <img src="/assets/profile.png" alt="...">
      <div class="caption" style="text-align: center">
        <h4>Display Picture</h4>
        <a href="#" class="btn btn-default" role="button">Change</a></p>
      </div>
    </div>
  </div>
</div>

<div class="form-group" {{bind-attr class="hasEmailError:has-error"}}>
  <label for="exampleInputEmail1">Username</label>
  {{input value=username class="form-control"}}
  {{#each emailErrors}}
    <span class="help-block text-danger">{{.}}</span>
  {{/each}}
</div>

<div class="form-group" {{bind-attr class="hasPasswordError:has-error"}}>
  <label for="exampleInputPassword1">Old Password</label>
  {{input type="password" value=password class="form-control"}}
  
  {{#each passwordErrors}}
    <span class="help-block text-danger">{{.}}</span>
  {{/each}}
</div>

<div class="form-group" {{bind-attr class="hasPasswordError:has-error"}}>
  <label for="exampleInputPassword1">New Password</label>
  {{input type="password" value=password class="form-control"}}
  {{#unless hasPasswordError}}
    <span class="help-block">Note: password must be at least 8 characters long.</span>
  {{/unless}}
  {{#each passwordErrors}}
    <span class="help-block text-danger">{{.}}</span>
  {{/each}}
</div>


<div class="form-group" {{bind-attr class="hasPasswordConfirmationError:has-error"}}>
  <label for="exampleInputPassword1">New Password Confirmation</label>
  {{input type="password" value=passwordConfirmation class="form-control"}}
  {{#each passwordConfirmationErrors}}
    <span class="help-block text-danger">{{.}}</span>
  {{/each}}
</div>

<a href="#" class="btn btn-default" role="button">Update</a></p>
