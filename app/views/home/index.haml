- unless current_user
  = render 'devise/registrations/new'
- else
  .welcome
    %h2= I18n.t('users.welcome', name: "#{current_user.first_name} #{current_user.last_name}")
    %h3
      = I18n.t('users.logged_in')
      = link_to current_user.username, user_path(current_user)
  .user-panel
    .user-tournaments
      %h2= "Your Tournaments"
      - if current_user.tournaments.empty?
        %p= I18n.t("tournaments.none")
      - else
        - current_user.tournaments.each do |tournament|
          %h3= link_to tournament.title, tournament_path(tournament)

    .user-groups
      %h2= "Your Groups"
      - current_user.groups.each do |group|
        %h3= link_to group.name, group_path(group)
        %h4= group.kind

    .user-teams
      %h2= "Your Teams"
      - if current_user.teams.empty?
        %p= I18n.t("teams.none")
      - else
        - current_user.teams.each do |team|
          %h3= link_to team.name, team_path(group)

