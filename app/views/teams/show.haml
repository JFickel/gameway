.team-banner
  %h2= @team.name

- if current_user == @team.leader
  = link_to I18n.t('teams.management'), edit_team_path(@team), class: 'small-btn'
  = link_to image_tag(@team.avatar.profile.url, class: 'avatar'), edit_team_path(@team)
- else
  = image_tag(@team.avatar.profile.url, class: 'avatar')

.team-members
  %h3= I18n.t('teams.members')
  %ul
    %li
      %h4
        = "#{I18n.t('teams.leader')}:"
        = link_to "#{@leader.username} - #{@leader.first_name} #{@leader.last_name}", user_path(@leader)
    - @members.each do |member|
      %li
        %h4= link_to "#{member.username} - #{member.first_name} #{member.last_name}", user_path(member)


.team-events
  %h3= I18n.t('events.events')

  %h4= link_to I18n.t('events.add'), new_event_path(team_id: @team.id), class: 'new-team-event-btn'
  %ul
    - @team.events.each do |event|
      %li
        %h4= event.title
        %h4= event.starts_at.strftime("%B %e, %Y")
        %p= event.starts_at.strftime("%l:%M%P")
        %p= event.description

        = link_to I18n.t('model.edit'), edit_event_path(event, team_id: @team.id), class: 'edit-team-event-btn'
        = link_to I18n.t('model.delete'), event_path(event), class: 'edit-team-event-btn', method: :delete
