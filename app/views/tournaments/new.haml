%h2= I18n.t("tournaments.create")
= form_for @tournament do |f|
  = f.text_field :title, placeholder: 'Title', class: 'tournament-input'
  = f.text_field :game, placeholder: 'Game', class: 'tournament-input'
  = f.text_field :starts_on, placeholder: 'Start Date', class: 'tournament-input'

  = f.submit 'Create', :disable_with => 'Creating...', class: 'tournament-submit'

