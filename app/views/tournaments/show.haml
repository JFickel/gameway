.tournament_show
  .title
  = @tournament.title
  .game
  = @tournament.game
  .start_time
  = @tournament.start_time
.owner
  .owner_id
  Owner:
  = @tournament.owner.username
  - if @tournament.owner == current_user
    = link_to "Manual Start", "#"
  .sign_up
  Sign up for dis tournament!
  = form_for @tournament_member do |f|
    = f.hidden_field :tournament_id, value: @tournament.id
    = f.submit('Sign up')

.tournament_members
  - @tournament.users.each do |u|
    .username
    = u.username
    .email
    = u.email
